<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/cimage"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="1dp"
            android:scaleType="centerInside"
            android:src="@drawable/unknow_image" />

        <TextView
            android:id="@+id/citem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/cimage"
            android:textStyle="bold"
            android:textColor="#e0e0e0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/citem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/citem1"
            android:layout_marginStart="6dp"
            android:layout_marginTop="1dp"
            android:layout_alignParentLeft="true"
            android:textColor="#e0e0e0"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/citem3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/citem2"
            android:layout_marginStart="6dp"
            android:layout_marginTop="1dp"
            android:layout_alignParentLeft="true"
            android:textColor="#e0e0e0"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/citem4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/citem3"
            android:layout_marginStart="6dp"
            android:layout_marginTop="1dp"
            android:layout_alignParentLeft="true"
            android:textColor="#e0e0e0"
            android:textSize="8sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
