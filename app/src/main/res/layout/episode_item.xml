<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/design_default_color_primary">

        <ImageView
            android:id="@+id/imageEpisode"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/episode" />

        <TextView
            android:id="@+id/eitem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/imageEpisode"
            android:textColor="#e0e0e0"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/eitem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eitem1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/imageEpisode"
            android:textColor="#e0e0e0"
            android:textStyle="bold"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/eitem3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eitem2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/imageEpisode"
            android:textColor="#e0e0e0"
            android:textStyle="bold"
            android:textSize="10sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
